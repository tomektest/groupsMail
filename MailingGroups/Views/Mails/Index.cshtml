@{
    ViewData["Title"] = "Mails";
}

@model Int32

<div class="container row p-0 m-0">

    <div class="col-1">
        <a asp-action="Index" asp-controller="Groups" class="btn btn-info form-control text-white">Back</a>
    </div>
    <div class="col-8">
        <h2 class="text-info">Mails from group:</h2>
    </div>
    <div class="col-3">
        <a asp-controller="Mails" asp-action="Create" asp-route-groupId="@Model" class="btn btn-info form-control text-white">Add New E-mail</a>
    </div>

    <div class="col-12 border p-3">
        <table id="DT_mail_load" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Lp.</th>
                    <th>E-mail</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script type="text/javascript">
    var id = parseInt('@Model');
</script>

@section Scripts{
    <script src="~/js/mails.js"></script>
}